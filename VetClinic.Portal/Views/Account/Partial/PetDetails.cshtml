@model VetClinic.Data.Data.Clients.Pet
<div class="card">
    <div class="card-image" style="width: 100%; height: auto; padding-bottom: 50%; overflow: hidden; position: relative; display: flex; justify-content: center; align-items: center;">
        @if (@Model.PetPicture != null)
        {
            var base64 = Convert.ToBase64String(@Model.PetPicture);
            var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
            <img src="@imgSrc" style="position: absolute; top: -30%; width: 100%; height: auto; object-fit: cover;" />
        }
    </div>
    <div class="card-content">
        <span class="card-title">@Model.PetName</span>
        <p>
            <b>Species:</b> @Model.PetSpecies.PetSpeciesName<br />
            <b>Breed:</b> @Model.PetBreed<br />
            <b>Sex:</b> @Model.PetSex<br />
            <b>Date of Birth:</b> @Model.PetDateOfBirth.ToString("dd/MM/yyyy")<br />
            <b>Unique Features:</b> @Model.PetDistinguishingFeatures<br />
        </p>
    </div>
</div>
