<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VetClinic.CompanionApp.Views.User.ChangePasswordPage">
    <ContentPage.Content>
        <StackLayout Margin="20">
            <Label Text="Current Password" />
            <Entry Text="{Binding CurrentPassword}" IsPassword="True" />

            <Label Text="New Password" Margin="0,20,0,0"/>
            <Entry Text="{Binding NewPassword}" IsPassword="True" />

            <Label Text="Confirm New Password" />
            <Entry Text="{Binding ConfirmPassword}" IsPassword="True" />

            <Label Text="{Binding ErrorMessage}"/>
            <Button Text="Change Password" Command="{Binding ChangePasswordCommand}" Margin="0,40,0,0"/>
            <Button Text="Cancel" Command="{Binding CancelCommand}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>