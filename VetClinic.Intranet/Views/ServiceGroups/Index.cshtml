@model IEnumerable<VetClinic.Data.Data.Clinic.ServiceGroup>

@{
    ViewData["Title"] = "Index";
}

<h3>Clinic > Services > Index</h3>
<hr />
<table class="table" style="vertical-align: central">
    <thead style="text-align: center">
        <tr>
            <th width="200">
                @Html.DisplayNameFor(model => model.ServiceGroupIconName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ServiceGroupName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ServiceGroupDesc)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr style="vertical-align:middle">
            <td width="200" style="text-align:center">
                <i class="mdi @Html.DisplayFor(modelItem => item.ServiceGroupIconName)" style="color: #16697A; font-size: 50px"></i>
            </td>
            <td style="text-align: center">
                @Html.DisplayFor(modelItem => item.ServiceGroupName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ServiceGroupDesc)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ServiceGroupId" class="btn btn-primary">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ServiceGroupId" class="btn btn-primary">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ServiceGroupId" class="btn btn-primary">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
<div class="form-group">
    <a asp-action="Create" class="btn btn-primary">Create New</a>
    <a href="javascript:window.history.back();" class="btn btn-primary">Back</a>
</div>