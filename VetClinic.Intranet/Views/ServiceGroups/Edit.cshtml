@model VetClinic.Data.Data.Clinic.ServiceGroup

@{
    ViewData["Title"] = "Edit";
}

<h3>Clinic > Services > Edit</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ServiceGroupId" />
            <div class="form-group">
                <label asp-for="ServiceGroupName" class="control-label"></label>
                <input asp-for="ServiceGroupName" class="form-control" />
                <span asp-validation-for="ServiceGroupName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ServiceGroupDesc" class="control-label"></label>
                <textarea asp-for="ServiceGroupDesc" class="form-control"></textarea>
                <span asp-validation-for="ServiceGroupDesc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ServiceGroupIconName" class="control-label"></label>
                <input asp-for="ServiceGroupIconName" class="form-control" />
                <span asp-validation-for="ServiceGroupIconName" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                @Html.CheckBoxFor(model => model.ServiceGroupIsActive)
                @Html.LabelFor(model => model.ServiceGroupIsActive, "Is Active")
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-primary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
