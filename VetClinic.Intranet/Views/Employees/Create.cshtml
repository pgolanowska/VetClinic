@model VetClinic.Data.Data.Staff.Employee

@{
    ViewData["Title"] = "Create";
}

<h3>Staff > Employees > Create</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
      @*      <div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
            <div class="form-group">
                <label asp-for="EmployeeName" class="control-label"></label>
                <input asp-for="EmployeeName" class="form-control" />
                <span asp-validation-for="EmployeeName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmployeeSurname" class="control-label"></label>
                <input asp-for="EmployeeSurname" class="form-control" />
                <span asp-validation-for="EmployeeSurname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TitleId" class="control-label"></label>
                <br />
                @Html.DropDownListFor(model => model.TitleId, new SelectList(ViewBag.Titles, "TitleId", "TitleName"), "Select Title")
                <span asp-validation-for="TitleId" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.Label("PositionId")
                <br/>
                @Html.DropDownListFor(model => model.PositionId, new SelectList(ViewBag.Positions, "PositionId", "PositionName"), "Select Position")
            </div>
            <div class="form-group">
                <label asp-for="EmployeeEducation" class="control-label"></label>
                <input asp-for="EmployeeEducation" class="form-control" />
                <span asp-validation-for="EmployeeEducation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmployeeBio" class="control-label"></label>
                <input asp-for="EmployeeBio" class="form-control" />
                <span asp-validation-for="EmployeeBio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmployeePhoto" class="control-label"></label>
                <br/>
                <input type="file" name="EmployeePhotoFile" class="form-control-file" />
            </div>
            <div class="form-group">
                <label class="control-label">Services</label>
                <br/>
                <div class="flex flex-xl-column btn-group-toggle" data-toggle="buttons">
                    <div>
                    @foreach (var serviceGroup in ViewBag.ServiceGroups)
                    {
                            <label class="btn btn-secondary">
                                <input type="checkbox" name="SelectedServiceGroups" value="@serviceGroup.ServiceGroupId">
                                <div>@serviceGroup.ServiceGroupName</div>
                            </label>              
                    }
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-primary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

}
