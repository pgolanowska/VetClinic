@model IEnumerable<VetClinic.Data.Data.Staff.Position>

@{
    ViewData["Title"] = "Index";
}

<h3>Staff > Positions > Index</h3>
<hr />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PositionName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            if (item.PositionIsActive == true)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.PositionName)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.PositionId" class="btn btn-primary">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.PositionId" class="btn btn-primary">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.PositionId" class="btn btn-primary">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
<div class="form-group">
    <a asp-action="Create" class="btn btn-primary">Create New</a>
    <a href="javascript:window.history.back();" class="btn btn-primary">Back</a>
</div>
